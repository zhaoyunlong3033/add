<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="663dp"
        android:id="@+id/linearlayout1"
        ></LinearLayout>
    <RadioGroup
        android:paddingBottom="5dp"
        android:id="@+id/tabs_rg"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="#dcdcdc"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/R1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/main_bottom_tab_home_normal"
            android:checked="true"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="首页" />
        <RadioButton
            android:id="@+id/R2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/main_bottom_tab_search_normal"
            android:checked="true"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="分类"
            />
        <RadioButton
            android:id="@+id/R3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/main_bottom_tab_category_normal"
            android:checked="true"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="发现"
            />

        <RadioButton
            android:id="@+id/R4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/main_bottom_tab_cart_normal"
            android:checked="true"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="购物车"
            />
        <RadioButton
            android:id="@+id/R5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/main_bottom_tab_personal_normal"
            android:checked="true"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="我的"
            />
    </RadioGroup>

</RelativeLayout>